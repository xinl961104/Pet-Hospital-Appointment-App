<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAPetActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/profile" />



    <EditText
        android:id="@+id/PetName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pet's name"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primaryDarkColor"
        android:textColorHint="@color/primaryDarkColor"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"/>

    <EditText
        android:id="@+id/PetAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pet's age"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primaryDarkColor"
        android:textColorHint="@color/primaryDarkColor"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PetName"
        android:layout_marginTop="16dp"/>


    <EditText
        android:id="@+id/PetsCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pet's Category"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primaryDarkColor"
        android:textColorHint="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/PetsBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pet's Breed"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primaryDarkColor"
        android:textColorHint="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/PetsCategory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp" />


    <EditText
        android:id="@+id/PetsComment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Pet's Comment"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primaryDarkColor"
        android:textColorHint="@color/primaryDarkColor"
        app:layout_constraintTop_toBottomOf="@id/PetsBreed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/primaryTextColor"
        android:background="@color/primaryColor"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/UpdatePetInfo"/>



    <Button
        android:id="@+id/UpdatePetInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/secondaryTextColor"
        android:background="@color/primaryDarkColor"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toRightOf="@id/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/DeletePet" />

    <Button
        android:id="@+id/DeletePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/secondaryTextColor"
        android:background="@color/primaryColor"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toRightOf="@id/UpdatePetInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>