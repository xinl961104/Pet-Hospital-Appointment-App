<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DoctorName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTimeSlotActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintGuide_begin="16dp">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintGuide_end="16dp">

    </androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="@id/Guideline1"
        app:layout_constraintRight_toRightOf="@id/Guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginTop="32dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TheDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_horizontal"
        android:text="DoctorName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/Guideline1"
        app:layout_constraintRight_toRightOf="@id/Guideline2"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/DoctorInfo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="Doctor Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoCalendar"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="@id/Guideline1"
        app:layout_constraintRight_toRightOf="@id/Guideline2"
        app:layout_constraintTop_toBottomOf="@id/TheDoctorName"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnGoCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE A TIME"
        android:paddingHorizontal="32dp"
        android:background="@color/secondaryDarkColor"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintLeft_toLeftOf="@id/Guideline1"
        app:layout_constraintRight_toRightOf="@id/Guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>