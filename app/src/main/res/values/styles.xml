<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FormPrimaryButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
    </style>

    <style name="FormSecondaryButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/secondaryDarkColor</item>
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryDarkColor</item>
    </style>

    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorPrimary">@color/thirdColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
    </style>



</resources>
